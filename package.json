{
  "name": "notificationsbotdiscord",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "bundle": "esbuild index.js --bundle --platform=node --target=node18 --format=cjs --outfile=build/bundle.js",
    "build": "npm run bundle && pkg build/bundle.js --targets node18-win-x64 --icon assets/icon.ico --output dist/bot.exe"
  },
  "dependencies": {
    "discord.js": "^14.25.1",
    "dotenv": "^17.2.3"
  },
  "devDependencies": {
    "esbuild": "^0.20.2"
  }
}